<div class="modal fade" id="importModal" tabindex="-1" role="dialog" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">Import a Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <div id="dragDropArea" ondrop="" ondragover="" class="d-flex flex-column align-items-center">
                    <i class="fas fa-file-import fa-4x mb-3"></i>
                    <p>Drag and drop a file here or click to select a file.</p>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="fileInput" onchange="" style="cursor:pointer;">
                    <label class="custom-file-label" for="fileInput">Choose file</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Import</button>
            </div>
        </div>
    </div>
</div>