@{
}

@model Project

<div class="modal fade" id="createProjectModal" tabindex="-1" role="dialog" aria-labelledby="createProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createProjectModalLabel">Create New Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createProjectForm" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label asp-for="Name">Name:</label>
                                <input asp-for="Name" type="text" class="form-control" autocomplete="on" placeholder="Project Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Version">Version:</label>
                                <input asp-for="Version" type="text" class="form-control" autocomplete="on" placeholder="Version">
                                <span asp-validation-for="Version" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" type="text" placeholder="Project Description">
                    </div>

                    <div class="form-group">
                        <label for="projectSelectSource0">Sources</label>
                        <div class="form-row">
                            <div class="col-md-9">
                                <select class="form-control source-select" id="projectSelectSource0" name="projectSelectSource0">
                                    <option value="" disabled selected>Choice a Source</option>
                                    <option value="source1">Source 1</option>
                                    <option value="source2">Source 2</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button class="btn add-button" id="addSourceField" style="margin-left: 22px;" type="button">
                                    <i class="fas fa-plus"></i>
                                </button>
                                <button class="btn import-button" type="button">
                                    <i class="fas fa-upload"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="projectSelectTarget0">Targets</label>
                        <div class="form-row">
                            <div class="col-md-9">
                                <select class="form-control target-select" id="projectSelectTarget0" name="projectSelectTarget0">
                                    <option value="" disabled selected>Choice a Target</option>
                                    <option value="target1">Target 1</option>
                                    <option value="target2">Target 2</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button class="btn add-button" id="addTargetField" style="margin-left: 22px;" type="button">
                                    <i class="fas fa-plus"></i>
                                </button>
                                <button class="btn import-button" type="button">
                                    <i class="fas fa-upload"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning alert-dismissible fade show" id="alertMessage" style="display: none;">
                        You cannot create more than 5 forms.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="bg-light">
                        <div class="accordion" id="advancedSettingsAccordion">
                            <div class="card">
                                <div class="card-header" id="advancedSettingsHeader">
                                    <h6 class="mb-0 cursor">
                                        <a data-toggle="collapse" data-target="#advancedSettingsCollapse" aria-expanded="true" aria-controls="advancedSettingsCollapse">
                                            Advanced Settings
                                        </a>
                                    </h6>
                                </div>

                                <div id="advancedSettingsCollapse" class="collapse" aria-labelledby="advancedSettingsHeader" data-parent="#advancedSettingsAccordion">
                                    <div class="card-body bg-light">
                                        <div class="form-check">
                                            <input asp-for="DisplayMappingEquivalence" class="form-check-input" type="checkbox" value="true">
                                            <label class="form-check-label" asp-for="DisplayMappingEquivalence">
                                                Display Mapping Equivalence
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="DisplayStatus" class="form-check-input" type="checkbox" value="true">
                                            <label class="form-check-label" asp-for="DisplayStatus">
                                                Display Status
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-light">
                        <div class="accordion" id="membersAccordion">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between" id="membersHeader">
                                    <h6 class="mb-0 cursor">
                                        <a data-toggle="collapse" data-target="#membersCollapse" aria-expanded="true" aria-controls="membersCollapse">
                                            Project Members
                                        </a>
                                    </h6>
                                    <h6 class="mb-0 cursor">
                                        <a>Add Member</a>
                                    </h6>
                                </div>

                                <div id="membersCollapse" class="collapse" aria-labelledby="membersHeader" data-parent="#membersAccordion">
                                    <div class="card-body bg-light">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Name</th>
                                                    <th scope="col">Role</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>John Doe</td>
                                                    <td>Project Owner</td>
                                                </tr>
                                                <tr>
                                                    <td>Jane Smith</td>
                                                    <td>Reviewer</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="saveProjectButton">Create Project</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>